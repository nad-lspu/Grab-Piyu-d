<OrderConfirmScreen>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 0.2, 0.6, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, None
            height: dp(100)
            padding: [dp(10), dp(10), dp(10), 0]

            FitImage:
                source: "assets/GrabPiyudLong_w.png"
                size_hint: 1, 1
                allow_stretch: False
                keep_ratio: True

        ScrollView:
            do_scroll_x: False
            bar_width: dp(4)
            bar_color: 0.12, 0.65, 0.32, 1

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: [dp(15), dp(15)]
                spacing: dp(15)

                MDCard:
                    size_hint: 1, None
                    height: dp(500)
                    elevation: 2
                    padding: dp(25)
                    spacing: dp(20)
                    radius: [dp(20)]
                    md_bg_color: 1, 1, 1, 1

                    BoxLayout:
                        orientation: "vertical"
                        spacing: dp(15)

                        MDIcon:
                            icon: "check-circle"
                            theme_text_color: "Custom"
                            text_color: 0.12, 0.65, 0.32, 1
                            font_size: "64sp"
                            halign: "center"
                            size_hint_y: None
                            height: dp(80)

                        MDLabel:
                            text: root.order_title
                            font_name: "assets/fonts/NotoSansKhmer-Bold.ttf"
                            font_size: "24sp"
                            halign: "center"
                            bold: True
                            size_hint_y: None
                            height: dp(40)
                            theme_text_color: "Custom"
                            text_color: 0.12, 0.65, 0.32, 1

                        MDSeparator:
                            height: dp(1)

                        MDLabel:
                            text: root.order_number
                            font_name: "assets/fonts/NotoSansKhmer-Bold.ttf"
                            font_size: "20sp"
                            halign: "center"
                            size_hint_y: None
                            height: dp(40)

                        MDLabel:
                            text: root.order_status
                            font_name: "assets/fonts/NotoSansKhmer.ttf"
                            font_size: "18sp"
                            halign: "center"
                            size_hint_y: None
                            height: dp(30)
                            theme_text_color: "Custom"
                            text_color: 0.9, 0.5, 0.1, 1

                        MDCard:
                            size_hint: 1, None
                            height: dp(220)
                            md_bg_color: 0.95, 0.95, 0.95, 1
                            radius: [dp(10)]
                            padding: dp(15)
                            elevation: 0

                            BoxLayout:
                                orientation: "vertical"
                                spacing: dp(10)

                                MDLabel:
                                    text: "Order Details"
                                    font_name: "assets/fonts/NotoSansKhmer-Bold.ttf"
                                    font_size: "18sp"
                                    halign: "left"
                                    size_hint_y: None
                                    height: dp(30)

                                MDLabel:
                                    text: root.delivery_info
                                    font_name: "assets/fonts/NotoSansKhmer.ttf"
                                    font_size: "16sp"
                                    halign: "left"
                                    size_hint_y: None
                                    height: dp(60)
                                    text_size: self.width, None
                                    valign: "top"

                                MDLabel:
                                    text: root.estimated_time
                                    font_name: "assets/fonts/NotoSansKhmer.ttf"
                                    font_size: "16sp"
                                    halign: "left"
                                    size_hint_y: None
                                    height: dp(30)

                                MDLabel:
                                    text: root.payment_info
                                    font_name: "assets/fonts/NotoSansKhmer.ttf"
                                    font_size: "16sp"
                                    halign: "left"
                                    size_hint_y: None
                                    height: dp(30)

                                BoxLayout:
                                    orientation: "horizontal"
                                    size_hint_y: None
                                    height: dp(40)
                                    padding: [0, dp(5)]

                                    MDLabel:
                                        text: "Total Amount:"
                                        font_name: "assets/fonts/NotoSansKhmer-Bold.ttf"
                                        font_size: "18sp"
                                        halign: "left"
                                        size_hint_x: 0.6

                                    MDLabel:
                                        text: root.total_amount
                                        font_name: "assets/fonts/NotoSansKhmer-Bold.ttf"
                                        font_size: "18sp"
                                        halign: "right"
                                        theme_text_color: "Custom"
                                        text_color: 0.9, 0.5, 0.1, 1
                                        size_hint_x: 0.4

        BoxLayout:
            orientation: "horizontal"
            spacing: dp(15)
            size_hint: 1, None
            height: dp(80)
            padding: [dp(20), dp(10), dp(20), dp(20)]

            MDFillRoundFlatButton:
                text: "Back to Menu"
                font_name: "assets/fonts/NotoSansKhmer-Bold.ttf"
                font_size: "16sp"
                md_bg_color: 0.9, 0.5, 0.1, 1
                text_color: 1, 1, 1, 1
                size_hint_x: 0.5
                on_release: root.go_to_menu()
                icon: "food"
                icon_size: "20sp"